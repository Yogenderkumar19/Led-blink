#include <DHT.h>
#include <LiquidCrystal_I2C.h>
DHT dht(2, DHT22);
LiquidCrystal_I2C lcd(0x27,16,2);

void setup() {
  Serial.begin(9600);
  dht.begin();
  lcd.init();  
  lcd.backlight(); 
}

void loop() {
  float h = dht.readHumidity();
  float t = dht.readTemperature();
  lcd.setCursor(0,0); lcd.print("TEMP: "); lcd.print(t); 
  lcd.setCursor(0,1); lcd.print("THuMID: "); lcd.print(h); 
  
 }
